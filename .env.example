# Database Configuration
MONGODB_URI=mongodb://explorer:your_secure_password@localhost:27017/explorerDB?authSource=explorerDB

# Web3 Provider Configuration  
WEB3_PROVIDER_URL=http://localhost:8329

# Server Configuration
NODE_ENV=production
NODE_OPTIONS=--max-old-space-size=512

# 1GB RAM Custom Configuration
BATCH_SIZE=50
MAX_BLOCKS_PER_RUN=100
SYNC_BATCH_SIZE=20
MAX_SYNC_BLOCKS=50

# Features
ENABLE_NFT=true
ENABLE_CONTRACT_VERIFICATION=true
ENABLE_TOKEN_TRACKING=true
ENABLE_STATS=true
ENABLE_RICHLIST=true
ENABLE_PRICE_TRACKING=true

# Performance Optimization
USE_SWAP=true
MEMORY_LIMIT=512
LOG_LEVEL=info

# Caching
ENABLE_CACHE=true
CACHE_DURATION=300
