{
  "name": "vbc-explorer",
  "version": "0.4.1",
  "description": "A modern blockchain explorer for VirBiCoin network with NFT support, contract verification, and real-time statistics",
  "keywords": ["blockchain", "explorer", "virbicoin", "cryptocurrency", "nft", "smart-contracts", "web3"],
  "repository": {
    "type": "git",
    "url": "https://github.com/virbicoin/vbc-explorer.git"
  },
  "license": "MIT",
  "author": "Aoi Emerauda",
  "contributors": [
    "Elaine",
    "Cody", 
    "Hackmod",
    "Bakon"
  ],
  "homepage": "https://explorer.digitalregion.jp",
  "bugs": {
    "url": "https://github.com/virbicoin/vbc-explorer/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "bash -c 'set -a && source .env.local 2>/dev/null || true && set +a && next build && next start'",
    "dev": "next dev",
    "build": "next build",
    "build:production": "npm run lint && npm run build",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "mocha --exit",
    "clean": "rm -rf .next out dist",
    "sync": "ts-node --project tsconfig.tools.json tools/sync.ts",
    "stats": "ts-node --project tsconfig.tools.json tools/stats.ts",
    "rich": "ts-node --project tsconfig.tools.json tools/richlist.ts",
    "tokens": "ts-node --project tsconfig.tools.json tools/tokens.ts",
    "price": "ts-node --project tsconfig.tools.json tools/price.ts",
    "price:once": "ts-node --project tsconfig.tools.json tools/price.ts --once",
    "price:show": "ts-node --project tsconfig.tools.json tools/price.ts --show",
    "data:start": "./manage-data.sh start all",
    "data:stop": "./manage-data.sh stop all",
    "data:restart": "./manage-data.sh restart all",
    "data:status": "./manage-data.sh status",
    "data:sync": "./manage-data.sh initial-sync",
    "data:rescan": "./manage-data.sh rescan-stats",
    "data:logs": "./manage-data.sh logs",
    "data:start:sync": "./manage-data.sh start sync",
    "data:start:stats": "./manage-data.sh start stats",
    "data:start:rich": "./manage-data.sh start richlist",
    "data:start:tokens": "./manage-data.sh start tokens",
    "data:start:price": "ts-node --project tsconfig.tools.json tools/price.ts",
    "data:stop:sync": "./manage-data.sh stop sync",
    "data:stop:stats": "./manage-data.sh stop stats",
    "data:stop:rich": "./manage-data.sh stop richlist",
    "data:stop:tokens": "./manage-data.sh stop tokens",
    "data:logs:sync": "./manage-data.sh logs sync",
    "data:logs:stats": "./manage-data.sh logs stats",
    "data:logs:rich": "./manage-data.sh logs richlist",
    "data:logs:tokens": "./manage-data.sh logs tokens",
    "production": "npm run build:production && npm start",
    "production:with-data": "npm run data:start && npm run production",
    "docker:build": "docker build -t vbc-explorer .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "human-standard-token-abi": "^2.0.0",
    "mongoose": "^8.16.3",
    "next": "15.3.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "rlp": "^3.0.0",
    "solc": "^0.8.30",
    "web3": "^4.16.0",
    "web3-explorer": "^1.0.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/express": "^5.0.3",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^24.0.13",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/web3": "^1.2.2",
    "autoprefixer": "^10.4.21",
    "chai": "^5.2.1",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-config-next": "15.3.5",
    "eslint-plugin-import": "^2.32.0",
    "mocha": "^11.7.1",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "request": "^2.88.2",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "6.0.0"
    }
  }
}
