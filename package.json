{
  "name": "vbc-explorer",
  "version": "0.4.0",
  "description": "A lightweight virbicoin classic block explorer",
  "repository": "https://github.com/virbicoin/explorer",
  "license": "MIT",
  "author": "Elaine, Cody, Hackmod, Bakon",
  "homepage": "https://vbc.digitalregion.jp",
  "bugs": {
    "url": "https://github.com/virbicoin/explorer/issues"
  },
  "scripts": {
    "start": "next build && next start",
    "build": "npm run lint && next build",
    "dev": "next dev",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "mocha --exit",
    "sync": "ts-node --project tsconfig.tools.json tools/sync.ts",
    "stats": "ts-node --project tsconfig.tools.json tools/stats.ts",
    "rich": "ts-node --project tsconfig.tools.json tools/richlist.ts",
    "tokens": "ts-node --project tsconfig.tools.json tools/tokens.ts",
    "price": "ts-node --project tsconfig.tools.json tools/price.ts",
    "price:once": "ts-node --project tsconfig.tools.json tools/price.ts --once",
    "price:show": "ts-node --project tsconfig.tools.json tools/price.ts --show",
    "data:start": "./manage-data.sh start all",
    "data:stop": "./manage-data.sh stop all",
    "data:restart": "./manage-data.sh restart all",
    "data:status": "./manage-data.sh status",
    "data:sync": "./manage-data.sh initial-sync",
    "data:rescan": "./manage-data.sh rescan-stats",
    "data:logs": "./manage-data.sh logs",
    "data:start:sync": "./manage-data.sh start sync",
    "data:start:stats": "./manage-data.sh start stats",
    "data:start:rich": "./manage-data.sh start richlist",
    "data:start:tokens": "./manage-data.sh start tokens",
    "data:start:price": "ts-node --project tsconfig.tools.json tools/price.ts",
    "data:stop:sync": "./manage-data.sh stop sync",
    "data:stop:stats": "./manage-data.sh stop stats",
    "data:stop:rich": "./manage-data.sh stop richlist",
    "data:stop:tokens": "./manage-data.sh stop tokens",
    "data:logs:sync": "./manage-data.sh logs sync",
    "data:logs:stats": "./manage-data.sh logs stats",
    "data:logs:rich": "./manage-data.sh logs richlist",
    "data:logs:tokens": "./manage-data.sh logs tokens",
    "production": "npm run build && npm start",
    "production:with-data": "npm run data:start && npm run production"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "concurrently": "^9.2.0",
    "human-standard-token-abi": "^2.0.0",
    "mongoose": "^8.16.3",
    "next": "15.3.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0",
    "rlp": "^3.0.0",
    "solc": "^0.8.30",
    "web3": "^4.16.0",
    "web3-explorer": "^1.0.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/express": "^5.0.3",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^24.0.13",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/web3": "^1.2.2",
    "autoprefixer": "^10.4.21",
    "chai": "^5.2.1",
    "eslint": "^9.31.0",
    "eslint-config-next": "15.3.5",
    "eslint-plugin-import": "^2.32.0",
    "mocha": "^11.7.1",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "request": "^2.88.2",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
